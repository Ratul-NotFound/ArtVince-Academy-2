rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserRole() == role;
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId || hasRole('admin');
    }

    // Courses
    match /courses/{courseId} {
      allow read: if true; // Publicly browsable
      allow write: if hasRole('admin');
    }

    // Course Modules
    match /courseModules/{moduleId} {
      allow read: if isSignedIn(); // Add course-specific logic if needed for paid restriction
      allow write: if hasRole('admin') || hasRole('trainer');
    }

    // Enrollment Requests
    match /enrollments/{enrollmentId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.uid || hasRole('admin') || hasRole('moderator'));
      allow create: if isSignedIn();
      allow update: if hasRole('admin') || hasRole('moderator');
      allow delete: if hasRole('admin');
    }

    // Progress Tracking
    match /progress/{progressId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.uid || hasRole('admin') || hasRole('trainer'));
      allow write: if hasRole('admin') || hasRole('trainer');
    }

    // Announcements
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if hasRole('admin') || hasRole('trainer') || hasRole('moderator');
    }

    // Attendance
    match /attendance/{attendanceId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.uid || hasRole('admin') || hasRole('trainer') || hasRole('moderator'));
      allow create: if hasRole('admin') || hasRole('trainer') || hasRole('moderator');
      allow update, delete: if hasRole('admin') || hasRole('moderator');
    }
  }
}
